<div>
  <h2>Login</h2>
  <form action="/login" method="POST">

    <label for="email">
      <input type="email" name="email" placeholder="Enter your email" />
    </label>
    <br />

    <label for="password">
      <input type="password" name="password" placeholder="******" />
    </label>
    <br />

    <button type="submit">LOGIN</button>
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>